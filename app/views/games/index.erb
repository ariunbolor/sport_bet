<div class="well">
  <h3>Upcoming Games</h3>
</div>

<div class="rTable">
  <!-- row heading -->
  <div class="rTableRow">
    <div class="rTableHead"><span style="display:inline-block; width: 100px;"></div>
    <div class="rTableHead"><span style="display:inline-block; width: 150px;"></div>
    <div class="rTableHead"><span style="display:inline-block; width: 150px;"></span></div>
    <div class="rTableHead"><span style="display:inline-block; width: 150px;"></span></div>
    <div class="rTableHead"><span style="display:inline-block; width: 200px;"></div>
    <div class="rTableHead"><span style="display:inline-block; width: 40px;"></span></div>
    <div class="rTableHead"><span style="display:inline-block; width: 40px;"></span></div>
 </div>
 <!-- row data -->
 <a href="games/:id">

  <% for i in 1..10 %>
  <% home_team_image = "" %>
  <% case @home_teams[i]
    when "Rays" %>
      <% home_team_image = "tb.gif" %>
    <% when "Blue Jays" %>
      <% image = "tor.gif" %>
  <% end %>
  <% case @away_teams[i]
  when "Blue Jays" %>
      <% away_team_image = "tor.gif" %>
    <% when "Blue Jays" %>
      <% image = "tor.gif" %>
  <% end %>
    <div class="rTableRow">
      <div class="rTableCell"><span style="display:inline-block; width: 100px;"><%= @game_dates[i] %></span></div>
      <div class="rTableCell"><span style="display:inline-block; width: 150px;"><img src="/images/<%= "#{home_team_image}"%>"/></div>
      <div class="rTableCell"><span style="display:inline-block; width: 150px;"><%= @home_teams[i] %> vs <%= @away_teams[i] %></div>
      <div class="rTableCell"><span style="display:inline-block; width: 150px;"><img src="/images/<%= "#{away_team_image}"%>"/></div>
      <div class="rTableCell"><span style="display:inline-block; width: 200px;"><%= @game_stadia_names[i] %> &nbsp <%= @game_stadia_cities[i] %></div>
      <div class="rTableCell"><span style="display:inline-block; width: 40px;">"3"</div>
      <div class="rTableCell"><span style="display:inline-block; width: 40px;">"2000"</div>
    </div>
  <% end %>

</a>
