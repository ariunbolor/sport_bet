                  </div>
                  <div class="modal-body">
                    <form class="form-inline" action="/games/<%= "#{@game.id}/bets" %>" method="post">
                      <div class="form-group">
                        <label for="team">Team</label>
                        <select class="form-control" name="game_team_id">
                          <% @game.game_teams.each do |gt| %>

                            <option value="<%= gt.id %>"><%= gt.team.name %></option>
                          <% end %>
                        </select>
                      </div>
                      <div class="form-group">
                        <label for="">Points</label>
                        <input type="text" class="form-control" name="bet_points">
                      </div>
                      <button type="submit" class="btn btn-success">Bet</button>
