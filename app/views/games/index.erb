      <td><img src="/images/<%= "#{@home_team_image}"%>"</td>
      <td>
        <a href="games/<%= "#{@games_array[i].id}"%>">
          <%= game[:home_team] %> vs <%= game[:away_team] %>
        </a>
      </td>
      <td><img src="/images/<%= "#{@away_team_image}"%>"/></td>
